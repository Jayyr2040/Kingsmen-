    <div class="columns">
      <div class="column">
      <img src="https://medias.spotern.com/spots/w640/0/822-1532336916.jpg" alt="splash image of kingsman display window"/>
    </div>
    
    <div class="column">
      <form action="/sessions/new" method="POST">
      <div class="field">
        <label class="label">Username</label>
        <div class="control has-icons-left has-icons-right">
          <input class="input is-warning" type="text" placeholder="Text input" name="name">
          <span class="icon is-small is-left">
            <i class="fas fa-user"></i>
          </span>
          <span class="icon is-small is-right">
            <i class="fas fa-check"></i>
          </span>
        </div>
        <p class="help is-success">This username is available</p>
      </div>
      
      <div class="field">
        <label class="label">Password</label>
        <div class="control has-icons-left has-icons-right">
          <input class="input is-warning" type="text" placeholder="Text input" name="password">
          <span class="icon is-small is-left">
            <i class="fas fa-envelope"></i>
          </span>
          <span class="icon is-small is-right">
            <i class="fas fa-exclamation-triangle"></i>
          </span>
        </div>
        <p class="help is-success">This email is available</p>
      </div>
   
      <div class="field is-grouped">
        <div class="control">
          <button class="button is-warning">Submit</button>
        </div>
        <div class="control">
          <button class="button is-warning is-light">Cancel</button>
        </div>
      </div>
    </form> 
  </div>
  
</div>
